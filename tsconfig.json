{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": [
            "node",
        ],
        "typeRoots": [
            "./node_modules/@types",
            "/src/@types",
        ],
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "ignore",
    ]
}
